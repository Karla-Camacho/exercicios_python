nome = str(input('Digite seu nome completo: '))

print ('Analisando seu nome. Aguarde....')

espacos = (nome.count(' '))
primeiro = (nome.find(' '))

print(f'Seu nome em maiúsculas é {nome.upper()}')
print(f'Seu nome completo em minúsculas é {nome.lower()}')
print(f'Seu nome todo tem {len(nome) - espacos} letras')
print(f'Seu primeiro nome tem {primeiro} letras')
